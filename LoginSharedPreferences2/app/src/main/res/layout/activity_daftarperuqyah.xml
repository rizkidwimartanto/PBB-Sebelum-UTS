<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_android"
    tools:context=".DaftarPeruqyahActivity">

    <TextView
        android:id="@+id/text_daftarperuqyah"
        android:text="Daftar Peruqyah"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:layout_height="100sp"/>

    <androidx.cardview.widget.CardView
        android:onClick="click_peruqyah1"
        android:id="@+id/peruqyah1"
        android:layout_marginTop="30sp"
        android:layout_below="@id/text_daftarperuqyah"
        android:layout_width="200sp"
        android:layout_height="200sp">

        <ImageView
            android:id="@+id/gambar_peruqyah1"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginBottom="80sp"
            android:src="@drawable/habibumar" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:onClick="click_peruqyah1"
        android:id="@+id/text_peruqyah1"
        android:layout_below="@id/peruqyah1"
        android:text="Habib Umar bin Hafidz"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#FFC107"
        android:layout_width="200sp"
        android:layout_height="50sp"/>

    <androidx.cardview.widget.CardView
        android:onClick="click_peruqyah2"
        android:id="@+id/peruqyah2"
        android:layout_marginTop="30sp"
        android:layout_below="@id/text_daftarperuqyah"
        android:layout_toRightOf="@id/peruqyah1"
        android:layout_width="match_parent"
        android:layout_height="200sp">

        <ImageView
            android:id="@+id/gambar_peruqyah2"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:layout_marginBottom="80sp"
            android:src="@drawable/habibali" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:onClick="click_peruqyah2"
        android:layout_below="@id/peruqyah2"
        android:layout_toRightOf="@id/text_peruqyah1"
        android:text="Habib Ali Al Jufri"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="#FFC107"
        android:layout_width="match_parent"
        android:layout_height="50sp"/>
</RelativeLayout>